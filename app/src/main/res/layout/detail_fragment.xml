<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.gsgana.gsledger.data.Product" />

        <import type="com.gsgana.gsledger.utilities.ConstantsKt" />

        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.DetailViewModel" />

        <variable
            name="callback"
            type="com.gsgana.gsledger.DetailFragment.Callback" />

        <variable
            name="fragment"
            type="com.gsgana.gsledger.DetailFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="1dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/detailBackButton"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    android:clickable="true"
                    android:orientation="horizontal" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Details"
                android:textAlignment="center"
                android:textSize="29sp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="664dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="424dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <!--            <ImageView-->
                    <!--                android:id="@+id/product_item_image"-->
                    <!--                android:layout_width="0dp"-->
                    <!--                android:layout_height="95dp"-->
                    <!--                android:scaleType="centerCrop"-->
                    <!--                app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                app:layout_constraintStart_toStartOf="parent"-->
                    <!--                app:layout_constraintTop_toTopOf="parent" />-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/item_image"
                                android:layout_width="218dp"
                                android:layout_height="218dp"
                                android:padding="8dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/product_item_brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="left"
                                android:text="@{viewModel.brand}"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/product_item_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/product_item_quantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="left"
                                android:text="@{&quot;Quantity : &quot; + viewModel.quantity}"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/product_item_quantityDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="@{viewModel.quantityDetail}"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textColor="@color/font_silver"
                                android:textSize="@dimen/text_small" />

                            <TextView
                                android:id="@+id/product_item_totalprice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_weight="0.43"
                                android:gravity="left"
                                android:text="@{&quot;Total Price : &quot; + viewModel.totalPrice}"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/product_item_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.43"
                                android:gravity="left"
                                android:text="@{&quot;Price per item : &quot; + viewModel.price}"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textColor="@color/font_silver"
                                android:textSize="@dimen/text_small" />


                            <TextView
                                android:id="@+id/product_item_pl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="left"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textSize="@dimen/text_small" />


                            <TextView
                                android:id="@+id/product_item_metal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="left"
                                android:text="@{&quot;Buy Date : &quot; + viewModel.buyDate}"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textSize="@dimen/text_medium" />

                            <TextView
                                android:id="@+id/product_item_memo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="5dp"
                                android:gravity="left"
                                android:textAppearance="?attr/textAppearanceListItem"
                                android:textSize="@dimen/text_medium" />

                        </LinearLayout>
                    </LinearLayout>

<!--                    <Button-->
<!--                        android:id="@+id/submit_Btn"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:onClick="@{() -> callback.add()}"-->
<!--                        android:text="Edit"-->
<!--                        android:textSize="35dp" />-->

                    <Button
                        android:id="@+id/delete_Btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{() -> callback.del()}"
                        android:text="Delete"
                        android:textSize="35dp" />

                </LinearLayout>
                <!--        android:text="@{viewModel.brand}"-->

        </ScrollView>

    </LinearLayout>
</layout>