<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.gsgana.gsledger.data.Product" />

        <import type="com.gsgana.gsledger.utilities.ConstantsKt" />

        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.DetailViewModel" />

        <variable
            name="Callback"
            type="com.gsgana.gsledger.Write5Fragment.Callback" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout5r"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_arrow_back_black_24dp"
                            android:clickable="true"
                            android:orientation="horizontal" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Write Page 5/6"
                        android:textAlignment="center"
                        android:textSize="29sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/contents"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="Purchased currency"
                        android:textSize="29sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="29dp"
                        android:orientation="horizontal">
                        <Spinner
                            android:id="@+id/currency_spinner1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <EditText
                            android:id="@+id/priceEditText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:hint="00"
                            android:inputType="number"
                            android:maxLength="9"
                            android:nextFocusRight="@+id/price_editText2"
                            android:textAlignment="center"
                            android:textSize="29sp"
                            android:visibility="invisible"/>

                        <TextView
                            android:id="@+id/priceEditText3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="18dp"
                            android:layout_weight="1.3"
                            android:text="."
                            android:textAlignment="center"
                            android:textSize="29sp"
                            android:textStyle="bold"
                            android:visibility="invisible"/>

                        <EditText
                            android:id="@+id/priceEditText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="00"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:textSize="29sp"
                            android:visibility="invisible"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/result_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:onClick="@{() -> Callback.click()}"
                            android:text="submit"
                            android:textAlignment="center"
                            android:textSize="36dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/total_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="36dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textSize="36dp" />

                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="36dp"
                                android:text=""
                                android:textAlignment="center"
                                android:textSize="36dp" />


                        </LinearLayout>

                    </LinearLayout>
                    <!--                <com.github.florent37.androidslidr.Slidr-->
                    <!--                    android:id="@+id/seekBar"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    app:slidr_regions_centerText="false"-->
                    <!--                    app:slidr_region_leftColor="#4CAF50"-->
                    <!--                    -->
                    <!--                    />-->

                    <TextView
                        android:id="@+id/result_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:text="111111111"
                        android:textAlignment="center"
                        android:textSize="36dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:textSize="@dimen/text_xmlarge"
                    android:textAlignment="center"
                    android:text="Loading..."/>

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/moveTo5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="NEXT"
                android:textSize="35dp"
                android:theme="@style/NextButton" />
        </LinearLayout>

    </LinearLayout>


</layout>