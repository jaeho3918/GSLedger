<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/tab1_cardview_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tab1_title_1_layout"
                android:layout_marginHorizontal="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="11dp"
                card_view:cardBackgroundColor="@color/border_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_border"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/goldChart"
                                android:textColor="@color/font_gold"/>

                            <LinearLayout
                                android:id="@+id/goldRealLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="18dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/goldRealWeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_large" />

                                <TextView
                                    android:id="@+id/goldRealCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_large" />

                                <TextView
                                    android:id="@+id/goldRealPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_large" />

                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <ProgressBar
                                    android:id="@+id/goldShortChartProgress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <RelativeLayout
                                    android:id="@+id/goldShortChartLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="gone">

                                    <com.github.mikephil.charting.charts.LineChart
                                        android:id="@+id/goldShortChart"
                                        android:layout_width="match_parent"
                                        android:layout_height="180dp" />

                                    <TextView
                                        android:id="@+id/todayLabel2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/goldShortChart"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginBottom="18.3dp"
                                        android:text="2020/04/18"
                                        android:textColor="@color/chart_font"
                                        android:textSize="6dp" />
                                </RelativeLayout>


                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_border"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/silverChart"
                                android:textColor="@color/font_silver"/>


                            <LinearLayout
                                android:id="@+id/silverRealLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="18dp"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/silverRealWeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_large" />

                                <TextView
                                    android:id="@+id/silverRealCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="3dp"
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_large" />

                                <TextView
                                    android:id="@+id/silverRealPrice"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_large" />

                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <ProgressBar
                                    android:id="@+id/silverShortChartProgress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <RelativeLayout
                                    android:id="@+id/silverShortChartLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="gone">

                                    <com.github.mikephil.charting.charts.LineChart
                                        android:id="@+id/silverShortChart"
                                        android:layout_width="match_parent"
                                        android:layout_height="180dp" />

                                    <TextView
                                        android:id="@+id/todayLabel1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/silverShortChart"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginEnd="3dp"
                                        android:layout_marginBottom="18.3dp"
                                        android:text="2020/04/18"
                                        android:textColor="@color/chart_font"
                                        android:textSize="6dp" />
                                </RelativeLayout>


                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.80"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="@string/total"
                                android:textSize="@dimen/text_medium" />

                            <LinearLayout
                                android:id="@+id/totalLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                card_view:ignore="NestedWeights">

                                <TextView
                                    android:id="@+id/totalCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:text=""
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/totalPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:text=""
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/totalPlper"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/totalprogress"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/plLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="@string/profit"
                                android:textSize="@dimen/text_medium"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/plCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:text=""
                                    android:textSize="@dimen/text_medium" />

                                <TextView
                                    android:id="@+id/plPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/text_medium" />

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/plprogress"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:visibility="gone" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/statChart"
                            android:layout_width="match_parent"
                            android:layout_height="330dp"
                            android:layout_marginVertical="8dp"
                            android:visibility="gone" />

                        <ProgressBar
                            android:id="@+id/chartprogress"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/isEmptyLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ledgerEmpty"
                                android:textSize="@dimen/text_large" />

                            <Button
                                android:id="@+id/add_Btn"
                                android:layout_width="180dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="13dp"
                                android:background="@drawable/create_btn"
                                android:drawableLeft="@drawable/add_button"
                                android:paddingStart="11dp"
                                android:text="@string/addProduct"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_large"
                                android:theme="@style/NextButton" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/totalGoldLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="@string/gold"
                            android:textColor="@color/font_gold"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/goldCoinLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="39dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/coin"
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_medium" />

                                <TextView
                                    android:id="@+id/goldCoinCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="3dp"
                                    android:text=""
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/goldCoinPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/goldCoinPl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text=""
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/goldBarLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal"
                                android:visibility="gone">


                                <TextView
                                    android:layout_width="39dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bar"
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_medium" />

                                <TextView
                                    android:id="@+id/goldBarCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="3dp"
                                    android:text=""
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/goldBarPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/goldBarPl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text=""
                                    android:textColor="@color/font_gold"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/goldprogress"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/goldNone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="-"
                                android:textColor="@color/font_gold"
                                android:textSize="18dp"
                                android:visibility="gone" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/totalSilverLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="@string/silver"
                            android:textSize="@dimen/text_medium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/silverCoinLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="39dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/coin"
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_medium" />

                                <TextView
                                    android:id="@+id/silverCoinCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="3dp"
                                    android:text=""
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/silverCoinPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />


                                <TextView
                                    android:id="@+id/silverCoinPl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text=""
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/silverBarLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal"
                                android:visibility="gone">


                                <TextView
                                    android:layout_width="39dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bar"
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_medium" />

                                <TextView
                                    android:id="@+id/silverBarCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="3dp"
                                    android:text=""
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/silverBarPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/silverBarPl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text=""
                                    android:textColor="@color/font_silver"
                                    android:textSize="@dimen/text_medium"
                                    android:visibility="visible" />
                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/silverprogress"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/silverNone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="-"
                                android:textColor="@color/font_silver"
                                android:textSize="18dp"
                                android:visibility="gone" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/chartCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="11dp"
                card_view:cardBackgroundColor="@color/border_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_border"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/totalChartSpotPrice"
                        android:textSize="@dimen/text_medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/goldChartProgress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <RelativeLayout
                            android:id="@+id/goldChartLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/goldChart"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:layout_marginVertical="8dp" />

                            <TextView
                                android:id="@+id/todayLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/goldChart"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="3dp"
                                android:layout_marginBottom="18.3dp"
                                android:text="2020/04/18"
                                android:textColor="@color/chart_font"
                                android:textSize="6dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>

