<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.HomeViewPagerViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:id="@+id/realTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabLayout"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:paddingTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/gold"
                        android:textColor="@color/font_gold"
                        android:textSize="@dimen/text_medium1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/realGoldCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="$"
                        android:textColor="@color/font_gold"
                        android:textSize="@dimen/text_medium1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/realGoldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@color/font_gold"
                        android:textSize="@dimen/text_medium1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/realGoldPL"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:paddingStart="3dp"
                            android:paddingBottom="3dp"
                            android:text="(+0.00%)"
                            android:textColor="@color/font_gold"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/silver"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_medium1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/realSilverCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="$"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_medium1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/realSilverPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_medium1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/realSilverPL"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:paddingStart="3dp"
                            android:paddingBottom="3dp"
                            android:text="(+0.00%)"
                            android:textColor="@color/font_silver"
                            android:textSize="@dimen/text_small"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/lastUpdate"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" : "
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small" />
                    <TextView
                        android:id="@+id/realUpdatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2000/00/00 00:00:00 "
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.105"
                    android:paddingRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/spotPrice"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/weightUnitLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:gravity="right"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/disclaimer"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></androidx.viewpager2.widget.ViewPager2>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111" />

    </LinearLayout>

</layout>