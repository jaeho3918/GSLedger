<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <import type="com.gsgana.gsledger.utilities.ConstantsKt" />

        <import type="java.util.Arrays" />

        <variable
            name="ConstantKt"
            type="com.gsgana.gsledger.utilities.ConstantsKt" />

        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.ProductsViewModel" />

        <variable
            name="product"
            type="com.gsgana.gsledger.data.Product" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="@{clickListener}"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:orientation="vertical"
            android:padding="1dp">

            <!--            <ImageView-->
            <!--                android:id="@+id/product_item_image"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="95dp"-->
            <!--                android:scaleType="centerCrop"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/item_image"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="8dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_item_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:text="@{viewModel.brand}"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_item_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="@dimen/text_medium"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_item_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:text="@{&quot;Quantity : &quot; + viewModel.quantity}"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/product_item_quantityDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@{viewModel.quantityDetail}"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/product_item_totalprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.43"
                        android:gravity="left"
                        android:text="@{&quot;Total Price : &quot; + viewModel.totalPrice}"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/product_item_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.43"
                        android:gravity="left"
                        android:text="@{&quot;Price per item : &quot; + viewModel.price}"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small" />


                    <TextView
                        android:id="@+id/product_item_pl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="@dimen/text_small" />


                    <TextView
                        android:id="@+id/product_item_metal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:text="@{&quot;Buy Date : &quot; + viewModel.buyDate}"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="@dimen/text_medium" />

                    <TextView
                        android:id="@+id/product_item_memo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:textSize="@dimen/text_medium" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <!--        android:text="@{viewModel.brand}"-->
    </androidx.cardview.widget.CardView>

</layout>