<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.HomeViewPagerViewModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/realTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_below="@id/tabLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Gold"
                android:layout_weight="1"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/realCurrency1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="$"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/realTimeGold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight="0.8"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Silver"
                android:layout_weight="1"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/realCurrency2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="$"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/realTimeSilver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight="0.8"
                android:textSize="18dp"/>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/realTimeLayout" />

    </RelativeLayout>

</layout>