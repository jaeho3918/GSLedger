<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.gsgana.gsledger.data.Product" />

        <import type="com.gsgana.gsledger.utilities.ConstantsKt" />

        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.DetailViewModel" />

        <variable
            name="callback"
            type="com.gsgana.gsledger.DetailFragment.Callback" />

        <variable
            name="fragment"
            type="com.gsgana.gsledger.DetailFragment" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="409dp"
            android:layout_height="664dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="424dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="223dp"
                    android:layout_height="233dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:textAlignment="center"
                    app:srcCompat="@mipmap/ic_launcher" />

                <RadioGroup
                    android:id="@+id/metal_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <RadioButton
                        android:id="@+id/metalGold_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Gold" />

                    <RadioButton
                        android:id="@+id/metalSilver_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Silver" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/type_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp">

                    <RadioButton
                        android:id="@+id/typeCoin_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Coin" />

                    <RadioButton
                        android:id="@+id/typeBar_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bar" />
                </RadioGroup>


                <Spinner
                    android:id="@+id/brand_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:paddingTop="18dp"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/weight_editText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:paddingTop="18dp" />

                    <Spinner
                        android:id="@+id/weightUnit_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:paddingTop="18dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/quantity_editText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:paddingTop="18dp" />

                    <Spinner
                        android:id="@+id/packageType_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:paddingTop="18dp"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/currency_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:paddingTop="18dp" />

                    <EditText
                        android:id="@+id/price_editText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="0.5"
                        android:inputType="numberSigned"
                        android:digits="0123456789."
                        android:paddingTop="18dp" />

                </LinearLayout>


                <EditText
                    android:id="@+id/memo_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@{viewModel.product.memo}"
                    android:textSize="35dp" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/submit_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> callback.add()}"
            android:text="Edit"
            android:textSize="35dp" />

        <Button
            android:id="@+id/delete_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> callback.del()}"
            android:text="Delete"
            android:textSize="35dp" />

    </LinearLayout>
</layout>