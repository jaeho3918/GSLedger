<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <import type="com.gsgana.gsledger.utilities.ConstantsKt" />

        <import type="java.util.Arrays" />

        <variable
            name="ConstantKt"
            type="com.gsgana.gsledger.utilities.ConstantsKt" />

        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.ProductsViewModel" />

        <variable
            name="product"
            type="com.gsgana.gsledger.data.Product" />


    </data>
    <!--<variable
                name="product"
                type="com.gsgana.gsledger.data.Product"/>-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="@{clickListener}"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            <ImageView-->
            <!--                android:id="@+id/product_item_image"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="95dp"-->
            <!--                android:scaleType="centerCrop"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->


            <TextView
                android:id="@+id/product_item_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@{viewModel.brand}"
                android:textAppearance="?attr/textAppearanceListItem" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/item_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                card_view:srcCompat="@drawable/eagle_gc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_item_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@{ConstantKt.METAL[viewModel.metal] +' '+ ConstantKt.TYPE[viewModel.type]}"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/product_item_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@{viewModel.weight +' ' + ConstantKt.WEIGHTUNIT[viewModel.weightUnit]}"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <TextView
                android:id="@+id/product_item_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@{&quot;quantity : &quot; + viewModel.quantity}"
                android:textAppearance="?attr/textAppearanceListItem" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_item_currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@{ConstantKt.CURRENCY[viewModel.currency]}"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/product_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0.43"
                    android:gravity="center_horizontal"
                    android:text="@{String.format(&quot;%,.2f&quot;,viewModel.price)}"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_item_totalcurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@{ConstantKt.CURRENCY[viewModel.currency]}"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/product_item_totalprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0.43"
                    android:gravity="center_horizontal"
                    android:text="@{String.format(&quot;%,.2f&quot;,viewModel.totalprice)}"
                    android:textAppearance="?attr/textAppearanceListItem" />
            </LinearLayout>

            <TextView
                android:id="@+id/product_item_metal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@{viewModel.buyDate}"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/product_item_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:text="@{viewModel.memo}"
                android:textAppearance="?attr/textAppearanceListItem" />


        </LinearLayout>
        <!--        android:text="@{viewModel.brand}"-->
    </androidx.cardview.widget.CardView>

</layout>