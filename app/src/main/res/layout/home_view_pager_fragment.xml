<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.HomeViewPagerViewModel" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <LinearLayout
            android:id="@+id/realTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabLayout"
            android:paddingTop="5dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Gold"
                    android:textStyle="bold"
                    android:textColor="@color/font_gold"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/realGoldCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="$"
                    android:textStyle="bold"
                    android:textColor="@color/font_gold"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/realGoldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/font_gold"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/realGoldPL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(+0.00%)"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:paddingStart="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/font_gold"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Silver"
                    android:textStyle="bold"
                    android:textColor="@color/font_silver"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/realSilverCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="$"
                    android:textStyle="bold"
                    android:textColor="@color/font_silver"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/realSilverPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/font_silver"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/realSilverPL"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="(+0.00%)"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:paddingStart="3dp"
                    android:paddingBottom="3dp"
                    android:textColor="@color/font_silver"
                    android:textSize="@dimen/text_small" />


            </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:paddingHorizontal="8dp"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Last Updated : "
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small"
                        />

                    <TextView
                        android:id="@+id/realUpdatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2020/10/10 00:00:00 "
                        android:textColor="@color/font_silver"
                        android:textSize="@dimen/text_small"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/realTimeLayout" />

    </LinearLayout>

</layout>