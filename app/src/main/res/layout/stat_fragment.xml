<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.gsgana.gsledger.viewmodels.HomeViewPagerViewModel" />

        <variable
            name="Callback"
            type="com.gsgana.gsledger.StatFragment.Callback" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/tab1_cardview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab1_title_1_layout"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            card_view:cardBackgroundColor="@color/border_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="@dimen/text_large"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <LinearLayout
                        android:id="@+id/totalLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/totalCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="@dimen/text_large"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_large"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/totalPlper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text=""
                        android:textSize="18dp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />
                </LinearLayout>
                    <ProgressBar
                        android:id="@+id/totalprogress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone" />

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="P/L"
                            android:textSize="@dimen/text_large"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                        <LinearLayout
                            android:id="@+id/plLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/plCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible"
                                 />

                            <TextView
                                android:id="@+id/plPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/text_large"
                                android:visibility="visible"
                                 />

                            <TextView
                                android:id="@+id/plPl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text=""
                                android:textSize="18dp"
                                android:visibility="visible"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/plprogress"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="gone" />

                    </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/statChart"
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:layout_marginVertical="8dp"
                        android:visibility="visible" />

                    <ProgressBar
                        android:id="@+id/chartprogress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Gold"
                        android:textColor="@color/font_gold"
                        android:textSize="@dimen/text_large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/goldCoinLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="Coin"
                                android:textColor="@color/font_gold"
                                android:textSize="@dimen/text_large"/>

                            <TextView
                                android:id="@+id/goldCoinCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:text="$"
                                android:textColor="@color/font_gold"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/goldCoinPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/font_gold"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/goldCoinPl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text=""
                                android:textColor="@color/font_gold"
                                android:textSize="18dp"
                                android:visibility="visible" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/goldBarLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="Bar"
                                android:textColor="@color/font_gold"
                                android:textSize="@dimen/text_large" />

                            <TextView
                                android:id="@+id/goldBarCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:text="$"
                                android:textColor="@color/font_gold"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/goldBarPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/font_gold"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible"/>

                            <TextView
                                android:id="@+id/goldBarPl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text=""
                                android:textColor="@color/font_gold"
                                android:textSize="18dp"
                                android:visibility="visible" />

                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/goldprogress"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Silver"
                        android:textSize="@dimen/text_large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/silverCoinLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="Coin"
                                android:textColor="@color/font_silver"
                                android:textSize="@dimen/text_large"
                                 />

                            <TextView
                                android:id="@+id/silverCoinCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:text="$"
                                android:textColor="@color/font_silver"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible"
                                 />

                            <TextView
                                android:id="@+id/silverCoinPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/font_silver"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible"
                                 />

                            <TextView
                                android:id="@+id/silverCoinPl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text=""
                                android:textColor="@color/font_silver"
                                android:textSize="18dp"
                                android:visibility="visible"
                                 />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/silverBarLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="Bar"
                                android:textColor="@color/font_silver"
                                android:textSize="@dimen/text_large"
                                 />

                            <TextView
                                android:id="@+id/silverBarCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:text="$"
                                android:textColor="@color/font_silver"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible"
                                 />

                            <TextView
                                android:id="@+id/silverBarPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/font_silver"
                                android:textSize="@dimen/text_large"
                                android:visibility="visible"
                                 />

                            <TextView
                                android:id="@+id/silverBarPl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:text=""
                                android:textColor="@color/font_silver"
                                android:textSize="18dp"
                                android:visibility="visible"
                                 />


                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/silverprogress"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </androidx.core.widget.NestedScrollView>
</layout>

